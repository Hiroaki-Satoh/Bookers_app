<!-- 編集画面 -->

<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

	<!-- バリデーションエラーメッセージの表示 -->
	<% if @book.errors.any? %>
	<h3>エラーが<%= @book.errors.count %>件あります。</h3>
	<ul>
		<% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
	<% end %>
	<!-- ------------------------ -->

<div>
    <h4>title</h4>
    <%= f.text_field :title %>
    <h4>body</h4>
    <%= f.text_area :body %>
</div>
<div>
    <%= f.submit 'Update Book' %>
</div>
<% end %>

<%= link_to "Show", book_path(@book) %> | 
<%= link_to "Back", "/books" %>